{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": ["es2015", "dom"],
        "outDir": "lib",
        "sourceMap": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "strictNullChecks": false,
        "types": ["mocha", "node"]
    },
    "exclude": [
        "node_modules",
        "build",
        "sources/test_tools",
        "node_modules/web3/types.d.ts"
    ],
    "include": [
        "./sources/actions.ts",
        "./sources/getters.ts",
        "./sources/dispatchers.ts",
        "./sources/state.ts",
        "./sources/utils.ts",
        "./sources/index.ts",

        "./sources/typings/ganache-core.d.ts"
    ]
}
